#include "STD_Types.h"
#include "BIT_math.h"
#include <util/delay.h>

#include "DIO_int.h"
#include "LCD_int.h"
#include "SEV_int.h"
#include "STEPPER_int.h"


int main (void){
	s8 i,j;
	DIO_voidInit();
	LCD_voidInit();
	LCD_voidWriteString("Home Security");
	while(1){
		LCD_voidClear();
		LCD_voidWriteString("Locking Door");


		for (i=3;i>=0;i--){
			Stepper_RotateCW();
			SEV_voidDisplayNb(SEV_LEFT,i);
			_delay_ms(1000);
		}

		LCD_voidClear();
		LCD_voidWriteString("Unlocking Door!");
		for (i=2;i>=0;i--){
			Stepper_RotateACW();
			SEV_voidDisplayNb(SEV_LEFT,i);
			_delay_ms(1000);
		}
		LCD_voidClear();

	}
	_delay_ms(10);

	return 0;
}
