#include "STD_Types.h"
#include "BIT_math.h"
#include <util/delay.h>

#include "DIO_int.h"
#include "LCD_int.h"
#include "SEV_int.h"
#include "KEY_int.h"
#include "STEPPER_int.h"

s8 i=0 ,j;
u8 u8PressedLoc;
u8 u8CodeInput[4]	=	{0};
u8 u8CodeLoc[4]		=	{1,2,3,4};

int main (void){

	DIO_voidInit();
	LCD_voidInit();
	KEY_voidInit();
	LCD_voidWriteString("Home Security");
	_delay_ms(2000);
	LCD_voidClear();
	LCD_voidWriteString("Enter Password:");
	_delay_ms(1000);
	LCD_voidGoToXY(2,0);
	LCD_voidSendCmd(0x0F);
	while(1){

		u8PressedLoc = KEY_u8GetPressedKey() ;

		if (u8PressedLoc != 0xFF)
		{
			if(u8PressedLoc == 'C'){
				LCD_voidClear();
				LCD_voidWriteString("Enter Password:");
				LCD_voidGoToXY(2,0);
			}else if(u8PressedLoc == 'E'){
				GetCode();
				if(u8CodeInput[i] == u8CodeLoc[i] && i == ((sizeof(u8CodeInput)/sizeof(u8)-1))){
					LCD_voidClear();
					LCD_voidWriteString("Welcome Home!");
					LCD_voidGoToXY(2,0);
					LCD_voidWriteString("Unlocking Door...");
					i=0;
					for (j=3;j>=0;j--){
						SEV_voidDisplayNb(SEV_LEFT,j);
						_delay_ms(1000);
					}
				}
				else if(u8CodeInput[i]!=u8CodeLoc[i]&& i == ((sizeof(u8CodeInput)/sizeof(u8)-1))){
					LCD_voidClear();
					LCD_voidWriteString("Wrong Password");
					i=0;
				}else{
				LCD_voidWriteString("Nothing!");
				}
			}else{
				LCD_voidWriteChar(u8PressedLoc +0x30);
				_delay_ms(200);
			}
		}
		//while(1){

		/*for (i=0;i<=63;i++){
		Stepper_RotateCW();
	}
	for (i=3;i>=0;i--){
		SEV_voidDisplayNb(SEV_LEFT,i);
		_delay_ms(1000);
	}


	/*for (i=0;i<=63;i++){
							Stepper_RotateACW();
				}* /
		for (i=2;i>=0;i--){
			SEV_voidDisplayNb(SEV_LEFT,i);
			_delay_ms(1000);
		}
		LCD_voidClear();*/

		_delay_ms(10);

		return 0;
	}
}
void GetCode(void){
	i	=	0;
	while(u8PressedLoc !=  'E' && u8PressedLoc != 'C'){
		u8CodeInput[i]=	u8PressedLoc;
		i++;
		if(i>=(sizeof(u8CodeInput)/sizeof(u8))){
			i	=	0;
			break;
		}
	}
}
